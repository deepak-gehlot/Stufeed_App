<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="adapter"
            type="com.stufeed.android.view.adapter.UserFollowingListAdapter" />

        <variable
            name="user"
            type="com.stufeed.android.api.response.GetFollowingListResponse.User" />
    </data>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/dimen_4dp"
        app:cardCornerRadius="3dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/mainView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="5dp">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    app:cardCornerRadius="46dp"
                    app:cardElevation="10dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/ic_launcher"
                        app:profileImageUrl="@{user.profilePic}" />
                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:lines="2"
                    android:maxLines="2"
                    android:padding="5dp"
                    android:text="@{user.fullName}"
                    android:textColor="@color/text_color"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/txtFollow"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/button2"
                    android:gravity="center"
                    android:onClick="@{()->adapter.onClickUnFollow(user)}"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    android:text="@string/un_follow"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <com.stufeed.android.customui.TriangleShapeView
                android:id="@+id/userTypeView"
                android:layout_width="@dimen/dimen_30dp"
                android:layout_height="@dimen/dimen_30dp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>