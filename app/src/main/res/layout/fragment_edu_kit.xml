<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="fragment"
            type="com.stufeed.android.view.fragment.connect.academy.EduKitFragment" />
    </data>

    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            tools:context="com.stufeed.android.view.fragment.connect.academy.EduKitFragment">

            <android.support.v7.widget.CardView
                android:id="@+id/layoutTimeTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/alert_diolog_bg"
                android:gravity="center"
                android:layout_marginRight="@dimen/dimen_5dp"
                android:layout_marginLeft="@dimen/dimen_5dp"
                app:cardElevation="@dimen/dimen_3dp"
                app:cardCornerRadius="@dimen/dimen_4dp"
                android:onClick="@{()->fragment.onItemClick(1)}">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="14dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Schedule"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/dimen_16sp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/alert_diolog_bg"
                android:gravity="center"
                app:cardCornerRadius="@dimen/dimen_4dp"
                android:layout_marginRight="@dimen/dimen_5dp"
                android:layout_marginLeft="@dimen/dimen_5dp"
                app:cardElevation="@dimen/dimen_3dp"
                android:onClick="@{()->fragment.onItemClick(2)}">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="14dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Campus Calender"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/dimen_16sp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/alert_diolog_bg"
                android:gravity="center"
                app:cardCornerRadius="@dimen/dimen_4dp"
                android:layout_marginRight="@dimen/dimen_5dp"
                android:layout_marginLeft="@dimen/dimen_5dp"
                app:cardElevation="@dimen/dimen_3dp"
                android:onClick="@{()->fragment.onItemClick(3)}">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="14dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Time Table"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/dimen_16sp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/alert_diolog_bg"
                android:gravity="center"
                app:cardCornerRadius="@dimen/dimen_4dp"
                android:layout_marginRight="@dimen/dimen_5dp"
                android:layout_marginLeft="@dimen/dimen_5dp"
                app:cardElevation="@dimen/dimen_3dp"
                android:onClick="@{()->fragment.onItemClick(4)}">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="14dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Result"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/dimen_16sp"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/alert_diolog_bg"
                android:gravity="center"
                app:cardCornerRadius="@dimen/dimen_4dp"
                android:layout_marginRight="@dimen/dimen_5dp"
                android:layout_marginLeft="@dimen/dimen_5dp"
                app:cardElevation="@dimen/dimen_3dp"
                android:onClick="@{()->fragment.onItemClick(5)}">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="14dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Document"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/dimen_16sp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/alert_diolog_bg"
                android:gravity="center"
                app:cardCornerRadius="@dimen/dimen_4dp"
                android:layout_marginRight="@dimen/dimen_5dp"
                android:layout_marginLeft="@dimen/dimen_5dp"
                app:cardElevation="@dimen/dimen_3dp"
                android:onClick="@{()->fragment.onItemClick(6)}">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="14dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Syllabus"
                    android:textColor="@color/text_color"
                   android:textSize="@dimen/dimen_16sp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/alert_diolog_bg"
                android:gravity="center"
                app:cardCornerRadius="@dimen/dimen_4dp"
                android:layout_marginRight="@dimen/dimen_5dp"
                android:layout_marginLeft="@dimen/dimen_5dp"
                app:cardElevation="@dimen/dimen_3dp"
                android:onClick="@{()->fragment.onItemClick(7)}">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="14dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Study Material"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/dimen_16sp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/alert_diolog_bg"
                android:gravity="center"
                app:cardCornerRadius="@dimen/dimen_4dp"
                android:layout_marginRight="@dimen/dimen_5dp"
                android:layout_marginLeft="@dimen/dimen_5dp"
                app:cardElevation="@dimen/dimen_3dp"
                android:onClick="@{()->fragment.onItemClick(8)}">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="14dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Events"
                    android:textColor="@color/text_color"
                    android:textSize="18sp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/alert_diolog_bg"
                android:gravity="center"
                app:cardCornerRadius="@dimen/dimen_4dp"
                android:layout_marginRight="@dimen/dimen_5dp"
                android:layout_marginLeft="@dimen/dimen_5dp"
                app:cardElevation="@dimen/dimen_3dp"
                android:onClick="@{()->fragment.onItemClick(9)}">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="14dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Question Paper"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/dimen_16sp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/alert_diolog_bg"
                android:gravity="center"
                app:cardCornerRadius="@dimen/dimen_4dp"
                android:layout_marginRight="@dimen/dimen_5dp"
                android:layout_marginLeft="@dimen/dimen_5dp"
                app:cardElevation="@dimen/dimen_3dp"
                android:onClick="@{()->fragment.onItemClick(10)}">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="14dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="Others"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/dimen_16sp" />
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</layout>