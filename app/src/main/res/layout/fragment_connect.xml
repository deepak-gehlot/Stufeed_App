<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context="com.stufeed.android.view.fragment.ConnectFragment">

        <LinearLayout
            android:id="@+id/seleterLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@drawable/round_unselected"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewInstitute"
                android:layout_width="@dimen/dimen_130dp"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:gravity="center"
                android:padding="8dp"
                android:text="Institute"
                android:textColor="@color/text_color"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/textViewUser"
                android:layout_width="@dimen/dimen_130dp"
                android:layout_height="wrap_content"
                android:background="@drawable/round_selected"
                android:gravity="center"
                android:padding="8dp"
                android:text="User"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </LinearLayout>

        <!--<android.support.design.widget.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_30dp"
            android:scrollbarSize="20dp"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/topheader"
            app:tabMode="scrollable"
            app:tabTextAppearance="@style/Base.TextAppearance.AppCompat.Small" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tabLayout" />-->

        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dimen_10dp"
            />

    </LinearLayout>
</layout>